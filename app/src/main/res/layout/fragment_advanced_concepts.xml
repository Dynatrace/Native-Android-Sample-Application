<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdvancedConceptsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryPanelCardStyle">

        <Button
            android:id="@+id/btn_tooltip_custom_headers"
            android:layout_alignParentTop="true"
            android:text="@string/label_tooltip"
            style="@style/PrimaryTooltip" />

        <TextView
            android:id="@+id/text_custom_headers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btn_tooltip_custom_headers"
            android:layout_alignTop="@id/btn_tooltip_custom_headers"
            android:text="@string/title_advanced_topics_custom_beacon_headers"
            style="@style/H2"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_custom_headers"
            android:layout_marginVertical="4dp"
            style="?appThemeDivider" />

        <Button
            android:id="@+id/btn_enable_beacon_headers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1"
            android:text="@string/label_advanced_topics_custom_headers_enable"
            style="@style/PrimaryButtonStyle"/>

        <Button
            android:id="@+id/btn_disable_beacon_headers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_enable_beacon_headers"
            android:text="@string/label_advanced_topics_custom_headers_disable"
            style="@style/PrimaryButtonStyle"/>

    </RelativeLayout>
</LinearLayout>